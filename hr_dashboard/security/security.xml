<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- hr user can see their own created record -->
    <record id="hr_dashboard_user_rule" model="ir.rule">
		<field name="name">Hr Dashboard User rule</field>
		<field name="model_id" ref="model_hr_employee"/>
		<field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
		<field name="domain_force">[('user_id','=',user.id)]</field>
	</record>

    <!-- hr admin can see all the record  -->
    <record id="hr_dashboard_admin_rule" model="ir.rule">
		<field name="name">Hr Dashboard Admin rule</field>
		<field name="model_id" ref="model_hr_employee"/>
		<field name="groups" eval="[(4, ref('hr.group_hr_manager'))]"/>
		<field name="domain_force">[]</field>
	</record>

</odoo>
